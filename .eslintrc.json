{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended"],
  "plugins": ["jest", "import"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", "tab"],
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "comma-dangle": ["error", "never"],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "import/extensions": ["error", "ignorePackages"]
  }
}
